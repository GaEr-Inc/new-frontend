{
  "name": "raffle-manager-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "bin": "dist/main.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "package": "yarn build && pkg .",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "deploy": "yarn build && yarn start:prod"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@types/hummus-recipe": "^1.8.5",
    "@types/lodash": "^4.14.179",
    "@types/sharp": "^0.29.5",
    "cli-progress": "^3.10.0",
    "dayjs": "^1.10.8",
    "lodash": "^4.17.21",
    "minifaker": "^1.34.0",
    "muhammara": "^2.2.0",
    "nanoid": "^3.3.1",
    "nexe": "^4.0.0-beta.19",
    "node-json-db": "^1.4.1",
    "pdf-lib": "^1.17.1",
    "readdir-sorted": "^3.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "sharp": "^0.30.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/cli-progress": "^3.9.2",
    "@types/express": "^4.17.13",
    "@types/jest": "27.4.1",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "caxa": "^2.1.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "maindb",
      "node_modules",
      "dist",
      "oneGenerated.pdf",
      "oneGenerated",
      "generated",
      "generated.pdf"
    ]
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [
      "src/assets/**/*",
      "node_modules/sharp/build/Release/**/*",
      "node_modules/sharp/build/Release/sharp-win32-ia32.node",
      "node_modules/sharp/vendor/**/*"
    ],
    "outputPath": "pkgdist",
    "targets": [
      "node16-win-x64"
    ]
  }
}
